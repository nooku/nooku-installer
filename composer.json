    "license": "GPLv3",
    "description": "A Composer plugin to install Nooku Framework into any Joomla site.",
    "keywords": ["nooku", "framework", "joomla", "platform", "component", "installer"],
    "homepage": "https://github.com/nooku/nooku-installer",
    "authors": [
        {
            "name": "Timble",
            "email": "info@timble.net",
            "homepage": "http://www.timble.net"
        }
    ],
    "autoload": {
        "psr-0": {"Nooku\\Composer\\": "src/"}
    },
    "extra": {
        "class": "Nooku\\Composer\\InstallerPlugin"
    },
    "require": {
        "composer-plugin-api": "^1.0"
    }
}
